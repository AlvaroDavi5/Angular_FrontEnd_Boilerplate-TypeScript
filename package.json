{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "angular_frontend_boilerplate",
	"version": "1.0.0",
	"description": "Node.js Boilerplate for Back-End using TypeScript",
	"license": "MIT",
	"private": false,
	"author": "Álvaro Davi Santos Alves <alvaro-davi1@hotmail.com>",
	"contributors": [
		"Álvaro Davi Santos Alves <alvaro-davi1@hotmail.com>"
	],
	"repository": "https://github.com/AlvaroDavi5/Angular_FrontEnd_Boilerplate-TypeScript",
	"main": "./src/main.ts",
	"engineStrict": true,
	"engines": {
		"node": ">=20.0.x <=22.x.x",
		"npm": ">=10.9.x <=11.x.x",
		"yarn": ">=1.22.x <2.x.x"
	},
	"os": [
		"linux",
		"ubuntu",
		"win32"
	],
	"keywords": [
		"boilerplate",
		"node",
		"typescript",
		"javascript",
		"angular"
	],
	"scripts": {
		"typecheck": "tsc --project tsconfig.json --noEmit",
		"build": "ng build",
		"build:watch": "ng build --watch --configuration development",
		"start": "ng serve --port 3001",
		"start:dev": "ng serve --port 3001 --open",
		"serve:ssr:angular_frontend_boilerplate": "node dist/angular_frontend_boilerplate/server/server.mjs",
		"security-check": "node ./scripts/security-check.js",
		"mock-dependencies": "cross-env NODE_PATH=. ts-node --project tsconfig.script.json ./scripts/mock-dependencies.ts",
		"test": "ng test --watch=true --browsers=ChromeHeadless",
		"prettify": "",
		"commit": "",
		"postinstall": ""
	},
	"config": {},
	"dependencies": {
		"@angular/animations": "^18.2.13",
		"@angular/common": "^18.2.13",
		"@angular/compiler": "^18.2.13",
		"@angular/core": "^18.2.13",
		"@angular/forms": "^18.2.13",
		"@angular/platform-browser": "^18.2.13",
		"@angular/platform-browser-dynamic": "^18.2.13",
		"@angular/platform-server": "^18.2.13",
		"@angular/router": "^18.2.13",
		"@angular/ssr": "^18.2.21",
		"express": "^4.18.3",
		"rxjs": "^7.8.2",
		"tslib": "^2.3.1",
		"typescript": "^5.5.4",
		"zone.js": "^0.14.10"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^18.2.20",
		"@angular/cli": "^18.2.20",
		"@angular/compiler-cli": "^18.2.13",
		"@types/express": "^4.17.23",
		"@types/jasmine": "^5.1.8",
		"@types/node": "^18.18.14",
		"child_process": "^1.0.2",
		"cross-env": "^7.0.3",
		"jasmine-core": "^5.2.0",
		"karma": "^6.4.4",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-jasmine": "^5.1.0",
		"karma-jasmine-html-reporter": "^2.1.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0"
	}
}