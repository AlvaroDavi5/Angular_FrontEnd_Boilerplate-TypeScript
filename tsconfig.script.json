{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"outDir": "build/scripts"
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts",
		"scripts/**/*.js",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}