{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "build/test",
		"allowJs": false,
		"types": [
			"jasmine"
		]
	},
	"include": [
		"server.ts",
		"src/**/.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.d.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"scripts"
	]
}